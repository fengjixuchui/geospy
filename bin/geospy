#blue start 
	BS="-e \033[1;34m"
#color end
	CE="\033[0m"
#red start
	RS="-e \033[1;31m"
#green start
	GNS="-e \033[1;32m"
#white start
  WHS="\033[0;97m"

printf '\033]2;Geolocation Spy\a'

cd ~
if [[ -d ~/geospy ]]
then
{
cd ~/geospy
} &> /dev/null
mv geospy.py geospy
python geospy $1 $2 $3 $4 $5 $6 $7 $8 $9
mv geospy geospy.py
else
{
ASESR="$( curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" != "" ]]
then 
cd ~
{
git clone https://github.com/entynetproject/geospy.git
cd ~/geospy
} &> /dev/null
mv geospy.py geospy
python geospy $1 $2 $3 $4 $5 $6 $7 $8 $9
mv geospy geospy.py
else
cd ~
sleep 1
exit
fi
fi
